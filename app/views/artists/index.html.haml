%h1 Listing artists

%table
  %thead
    %tr
      %th Name
      %th Dob
      %th Label
      %th
      %th
      %th

  %tbody
    - @artists.each do |artist|
      %tr
        %td= artist.name
        %td= artist.dob
        %td= artist.label
        %td= link_to t('show'), artist
        %td= link_to t('edit'), edit_artist_path(artist)
        %td= link_to t('destroy'), artist, :method => :delete, :data => { :confirm => 'Are you sure?' }

