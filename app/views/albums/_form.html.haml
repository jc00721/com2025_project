= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :artist
    %p= @album.artist.name
    = f.hidden_field :artist_id, value: @album.artist.id
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :length
    = f.text_field :length
  .field
    = f.label :tracks
    = f.number_field :tracks
  .actions
    = f.submit 'Save'
